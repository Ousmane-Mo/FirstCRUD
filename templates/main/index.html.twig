{% extends 'base.html.twig' %}

{% block title %}Accueil CRUD{% endblock %}

{% block body %}
        <section class="d-flex justify-content-center mt-3">
            {% for message in app.flashes('success') %}
                <div class="alert alert-dismissible alert-success">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    {{ message }}
                </div>
            {% endfor %}
        </section>
        <section class="d-flex justify-content-center">
            <table class="table table-hover w-75 text-center my-5 border border-collapse">
                <thead class="table-primary border">
                    <th scope="col">ID</th>
                    <th scope="col">Titre de l'article</th>
                    <th scope="col">Contenu de l'article</th>
                    <th scope="col">Actions</th>   
                </thead>
                <tbody class="table-info border">
                    {% for data in datas %}
                        <tr>
                            <td> {{data.id}} </td>
                            <td> {{data.title}} </td>
                            <td> {{data.content}} </td>
                            <td>
                                <a href="{{path('app_edit', {'id':data.id})}}" class="btn btn-dark">Modifier </a>
                                <a href="{{path('app_delete', {'id':data.id})}}" class="btn btn-dark mx-2">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="4">
                            <a href="{{path('app_create')}}" class="btn btn-dark">Ajouter un article</a>
                        </td>
                    </tr>
                </tfoot>
            </table>
            </section>
{% endblock %}
